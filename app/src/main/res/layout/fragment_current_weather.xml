<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="currently"
            type="com.batch.weatherapp.model.Currently"/>
        <variable name="data"
            type="com.batch.weatherapp.model.DataItem"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal"
        tools:context=".view.BaseFragment">


        <TextView
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/search_button"
            android:background="@null"
            android:hint="@string/enter_place_here"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="30sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_add_black_24dp" />
        <TextView
            android:id="@+id/current_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_bar"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/datetimetext"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/current_weather_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/current_date"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:src="@mipmap/ic_storm_foreground"/>
        <TextView
            android:id="@+id/current_weather_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/current_weather_icon"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/current_date"
            android:textSize="60dp"
            android:textColor="@color/white"
            android:text="@{currently.summary}"/>
        <TextView
            android:id="@+id/current_weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_weather_summary"
            android:layout_marginLeft="20dp"
            android:textSize="170dp"
            android:textColor="@color/white"
            android:text="@{currently.temperature}"/>
        <TextView
            android:id="@+id/current_weather_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_weather_summary"
            android:layout_toRightOf="@id/current_weather_temperature"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:text="@{data.temperatureMax}"
            android:textSize="40sp"
            android:textColor="@color/white"/>

        <View
            android:id="@+id/divider"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_below="@id/current_weather_max"
            android:layout_toRightOf="@id/current_weather_temperature"
            android:layout_marginLeft="20dp"
            android:background="@color/white" />
        <TextView
            android:id="@+id/current_weather_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_toRightOf="@id/current_weather_temperature"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:text="@{data.temperatureMin}"
            android:textSize="40sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/clock_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/current_weather_temperature"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:src="@mipmap/ic_clock_foreground"/>
        <ImageView
            android:id="@+id/temperature_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/current_weather_temperature"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_temperature_foreground"/>
        <ImageView
            android:id="@+id/precipitation_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/current_weather_temperature"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:src="@mipmap/ic_wet_foreground"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_image"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:background="@null"/>

    </RelativeLayout>
</layout>